@model List<RideShareFrontend.DTOs.RideDto>

@{
    ViewBag.Title = "My Rides";
    Layout = "_DriverLayout.cshtml";
}

<h2 class="mb-4">My Rides</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
else if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
else if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No rides found.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Ride ID</th>
                    <th scope="col">Origin</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Departure</th>
                    <th scope="col">Arrival</th>
                    <th scope="col">Seats</th>
                    <th scope="col">Price (â‚¹)</th>
                    <th scope="col">Type</th>
                    <th scope="col">Status</th>
                    <th scope="col">Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ride in Model)
                {
                    <tr>
                        <td>@ride.RideId</td>
                        <td>@ride.Origin</td>
                        <td>@ride.Destination</td>
                        <td>@ride.DepartureTime.ToString("dd-MMM-yyyy HH:mm")</td>
                        <td>
                            @(ride.ArrivalTime.Year > 1 ? ride.ArrivalTime.ToString("dd-MMM-yyyy HH:mm") : "-")
                        </td>
                        <td>@ride.AvailableSeats</td>
                        <td>@ride.PricePerSeat.ToString("0.00")</td>
                        <td>
                            @if (ride.RideType == "OneTime")
                            {
                                <span class="badge bg-primary">One Time</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">@ride.RideType</span>
                            }
                        </td>
                        <td>
                            @if (ride.Status == "Scheduled")
                            {
                                <span class="badge bg-success">Scheduled</span>
                            }
                            else if (ride.Status == "Completed")
                            {
                                <span class="badge bg-secondary">Completed</span>
                            }
                            else if (ride.Status == "Cancelled")
                            {
                                <span class="badge bg-danger">Cancelled</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@ride.Status</span>
                            }
                        </td>
                        <td>@(string.IsNullOrEmpty(ride.Notes) ? "-" : ride.Notes)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

