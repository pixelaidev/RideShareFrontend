@model RideShareFrontend.Models.ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password - Set New Password";
}

<div class="auth-container">
    <h2>Set New Password</h2>
    <h4>Email: @Model.Email</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="ResetPassword" asp-route-returnUrl="/ResetPassword" method="post">
        <input asp-for="Email" type="hidden" />
        <div class="form-group">
            <label asp-for="Password">New Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>
</div>

@section Styles {
    <style>
        .auth-container {
            max-width: 400px;
            margin: 150px auto;
            padding: 40px 30px;
            background: #f9f9f9;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            text-align: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .auth-container h2 {
            margin-bottom: 15px;
            color: #333;
        }

        .auth-container h4 {
            margin-bottom: 25px;
            color: #555;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-control {
            width: 100%;
            padding: 10px 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0,123,255,0.3);
            outline: none;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 8px;
            background-color: #007bff;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .text-danger {
            font-size: 14px;
        }
    </style>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
